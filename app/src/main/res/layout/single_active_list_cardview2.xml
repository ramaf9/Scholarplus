<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_gravity="center"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/dark_design">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/rl_bg"
                android:scaleType="centerCrop"
            />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">




            <TextView
                android:id="@+id/web_beasiswa"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scholarplus.com"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/shape2"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/ipkkuh"
                android:layout_below="@id/web_beasiswa"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="IPK"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/shape5"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                />





            <TextView
                android:id="@+id/juduls"
                android:layout_below="@id/ipkkuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Beasiswa"
                android:textColor="@color/iron" />

            <TextView
                android:id="@+id/text_view_created_by_user"
                android:layout_below="@+id/juduls"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:textColor="#ffffff"
                android:textSize="30sp" />

            <com.mikhaellopez.circularimageview.CircularImageView

                android:id="@+id/created_by"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:visibility="invisible"
                android:layout_height="90dp"
                app:civ_border_color="#fff"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="#232323"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >


            <TextView
                android:id="@+id/duedatesssss"
                android:textSize="10sp"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Duedate"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textColor="@color/aluminum"/>

            <TextView
                android:id="@+id/duedatess"
                android:textSize="12sp"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textColor="@color/white"/>



        </LinearLayout>




            </RelativeLayout>

        <Button
            android:id="@+id/taptosimor"
            style="@style/Button.login"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/rl_bg"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:background="@drawable/shape5"
            android:textColor="@color/white"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Share" />






    </RelativeLayout>

</android.support.v7.widget.CardView>
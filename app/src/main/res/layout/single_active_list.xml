<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lists_row_height"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/created_by"
            android:layout_width="@dimen/logo_image_size"
            android:layout_height="match_parent"
            />


        <TextView
            android:id="@+id/text_view_created_by_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_text_padding"
            android:layout_toEndOf="@+id/created_by"
            android:layout_toRightOf="@+id/created_by"
            android:textSize="@dimen/login_buttons_text_size"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

